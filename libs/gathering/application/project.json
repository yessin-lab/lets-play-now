{
  "name": "gathering-application",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/gathering/application/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/gathering/application",
        "main": "libs/gathering/application/src/index.ts",
        "tsConfig": "libs/gathering/application/tsconfig.lib.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/gathering/application/**/*.ts",
          "libs/gathering/application/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/libs/gathering/application"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    }
  },
  "tags": [
    "application"
  ]
}